<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.acterics.racesclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".RacesApplication"
        android:theme="@style/AppTheme" >

        <activity android:name=".ui.splashscreen.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.auth.AuthenticateActivity"
            android:theme="@style/NoActionBarTheme"/>

        <activity android:name=".ui.main.MainActivity"
            android:theme="@style/AppTheme"/>

        <activity android:name=".ui.profile.edit.EditProfileActivity"
            android:theme="@style/AppTheme"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f1c07163b1ed6df9d047b3bb99202534bb6fbf4c"
            />

    </application>
</manifest>
